{
  "name": "baileys-api-server",
  "version": "1.0.0",
  "description": "WhatsApp API server using Baileys - drop-in replacement for wwebjs-api",
  "main": "src/server.ts",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "start": "bun run src/server.ts",
    "build": "bun build src/server.ts --outdir dist --target node --packages external",
    "typecheck": "tsc --noEmit",
    "check:openapi": "node scripts/check-openapi-coverage.cjs"
  },
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.17",
    "express": "^4.21.2",
    "axios": "^1.7.9",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "qrcode": "^1.5.4",
    "dotenv": "^16.4.7",
    "link-preview-js": "^3.0.5",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.7",
    "@types/qrcode": "^1.5.5",
    "typescript": "^5.7.3"
  }
}
